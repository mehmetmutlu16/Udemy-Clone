@model Videolar

@{
    Layout = "_CourseLayout";
    ViewData["Title"] = "Video";
}

<div class="row mt-5" style="height: 500px;">
    <div class="col-3">
        <div class="container" style="border-radius: 10px; border: 2px solid black; margin: 20px; background-color: white;">
            <h2>@Model.Baslik Kursu</h2>
        </div>
        <br>
        <div class="container" style="border-radius: 10px; border: 2px solid black; margin: 20px;background-color: white;">
            <p style="padding-left: 10px; padding-right: 10px; padding-top: 10px;">@Model.Aciklama</p>
        </div>
    </div>
    <div class="col-9">
        <div class="row" style="margin: 20px;">
            <h3>Video ismi 1</h3>
        </div>
        <div class="row" style="margin: 20px;">
            <video width="800" height="400" controls>
                <source src="data:video/mp4;base64,@Convert.ToBase64String(@Model.VideoData)" type="video/mp4">
            </video>
        </div>
    </div>
</div>

