@model Ogrenci

@{
    ViewData["Title"] = "Kurs Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Öğretmen Kontrol</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="OgrenciMiKontrol">
                        <div class="form-group">
                            <label asp-for="Eposta">Mail:</label>
                            <input class="form-control" asp-for="Eposta" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Sifre">Şifre:</label>
                            <input class="form-control" asp-for="Sifre" required />
                        </div>
                        <button type="submit" class="btn btn-primary mt-3 d-flex">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>