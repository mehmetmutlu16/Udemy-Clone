@model RegisterViewModel

@{
  ViewData["Title"] = "Register Page";
}

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center">Register</h3>
        </div>
        <div class="card-body">
          <form method="post">
            <div class="form-group">
              <label asp-for="Ad">Ad:</label>
              <input class="form-control" asp-for="Ad" placeholder="Adınız">
            </div>
            <div class="form-group">
              <label asp-for="Soyad">Soyad:</label>
              <input class="form-control" asp-for="Soyad" placeholder="Soyadınız">
            </div>
            <div class="form-group">
              <label asp-for="Soyad">Öğrenci mi? Öğretmen mi?</label>
              <select asp-for="OgrenciMi" class="form-select">
                <option value="">Seçiniz</option>
                <option value="1">Ögrenci</option>
                <option value="2">Öğretmen</option>
              </select>
            </div>
            <div class="form-group">
              <label asp-for="Eposta">Email:</label>
              <input class="form-control" asp-for="Eposta" placeholder="Mailinizi giriniz">
            </div>
            <div class="form-group">
              <label asp-for="Sifre">Şifre:</label>
              <input class="form-control" asp-for="Sifre" placeholder="Şifrenizi giriniz">
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-3">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>